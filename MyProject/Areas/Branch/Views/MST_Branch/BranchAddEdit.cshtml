@{
    ViewData["Title"] = "Add Edit Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MyProject.Areas.Branch.Models.LOC_BranchModel
<div class="container">
    <form role="form" asp-controller="MST_Branch" asp-action="Save" method="post">
        <h1>
            Branch Add/Edit
        </h1>
        <hr />
        @Html.HiddenFor(x=>x.BranchID)
        <div class="form-group">
            <label for="BranchName">Branch Name</label>
            <input asp-for="BranchName" placeholder="Enter Branch Name" type="text" class="form-control" aria-describedby="BranchNameHelpBlock">
            <span asp-validation-for="BranchName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="BranchCode">Branch Code</label>
            <input asp-for="BranchCode" placeholder="Enter Branch Code" type="text" class="form-control">
            <span asp-validation-for="BranchCode" class="form-text text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <button type="submit" class="btn btn-success">Save</button>
            <a class="btn btn-danger" asp-area="Branch" asp-controller="MST_Branch" asp-action="Index">
                Cancel
            </a>
        </div>
    </form>
    @if (TempData["Message"] != "")
    {
        <span class="text-white bg-success fw-bold p-2">
            @TempData["Message"]
        </span>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
}

