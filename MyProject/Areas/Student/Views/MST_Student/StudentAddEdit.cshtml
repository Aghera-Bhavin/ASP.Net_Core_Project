@{
    ViewData["Title"] = "Add Edit Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MyProject.Areas.Student.Models.MST_StudentModel

<div class="container">
    <form role="form" asp-area="Student" asp-controller="MST_Student" asp-action="Save" method="post">
        <h1>
            Student Add/Edit
        </h1>
        <hr />
        @Html.HiddenFor(x=>x.StudentID)
        <div class="form-group">
            <label for="BranchID">Branch</label>
            <div>
                <select asp-for="BranchID" asp-items=@(new SelectList(ViewBag.BranchList,"BranchID","BranchName")) class="form-control custom-select">
                    <option disabled selected>Select Branch</option>
                </select>
                <span asp-validation-for="BranchID" class="form-text text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="CityID">City</label>
            <div>
                <select asp-for="CityID" asp-items=@(new SelectList(ViewBag.CityList,"CityID","CityName")) class="form-control custom-select">
                    <option disabled selected>Select City</option>
                </select>
                <span asp-validation-for="CityID" class="form-text text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="StudentName">Student Name</label>
            <input asp-for="StudentName" placeholder="Enter Student Name" type="text" class="form-control" aria-describedby="StudentNameHelpBlock">
            <span asp-validation-for="StudentName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="MobileNoStudent">Mobile Number</label>
            <input asp-for="MobileNoStudent" placeholder="Enter Student Mobile Number" type="text" class="form-control" aria-describedby="MobileNoStudentHelpBlock">
            <span asp-validation-for="MobileNoStudent" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input asp-for="Email" placeholder="Enter Student Email" type="text" class="form-control" aria-describedby="EmailHelpBlock">
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="MobileNoFather">Father Mobile Number</label>
            <input asp-for="MobileNoFather" placeholder="Enter Father Mobile Number" type="text" class="form-control" aria-describedby="MobileNoFatherHelpBlock">
            <span asp-validation-for="MobileNoFather" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <textarea asp-for="Address" placeholder="Enter Student Address" class="form-control" rows="2" cols="5"></textarea>
            <span asp-validation-for="Address" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="BirthDate">BirthDate</label>
            <input asp-for="BirthDate" placeholder="Enter Student Birth Date" type="date" class="form-control" aria-describedby="BirthDateHelpBlock">
            <span asp-validation-for="BirthDate" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Age">Age</label>
            <input asp-for="Age" placeholder="Enter Student Age" type="number" class="form-control" aria-describedby="AgeHelpBlock">
            <span asp-validation-for="Age" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="IsActive">IsActive</label>
            <input type="checkbox" asp-for="IsActive" />
            @*@Html.CheckBoxFor(x => Convert.ToBoolean(x.IsActive),new { @class = "form-control" })*@
            <span asp-validation-for="IsActive" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Gender">Gender</label>
            <input asp-for="Gender" placeholder="Enter Gender" type="text" class="form-control" aria-describedby="GenderHelpBlock">
            <span asp-validation-for="Gender" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input asp-for="Password" placeholder="Enter Student Password" type="password" class="form-control" aria-describedby="PasswordHelpBlock">
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-area="Student" asp-controller="MST_Student" asp-action="Index" name="cancel" class="btn btn-danger">Cancel</a>
        </div>


    </form>
    @if (TempData["Message"] != "")
    {
        <span class="text-white bg-success fw-bold p-2">
            @TempData["Message"]
        </span>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
}


